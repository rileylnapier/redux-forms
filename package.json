{
  "private": true,
  "scripts": {
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run tslint",
    "tslint": "tslint -e '**/lib/**' --project tsconfig.json 'packages/**/*.{ts,tsx}'",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "build:lib": "gulp",
    "build:umd": "webpack",
    "build:umd:min": "cross-env NODE_ENV=production webpack",
    "clean": "npm run clean:deps && npm run clean:build",
    "clean:build": "rm -rf packages/*/lib",
    "clean:deps": "rm -rf node_modules packages/*/node_modules",
    "bootstrap": "npm run clean && yarn && lerna bootstrap && npm run build:lib",
    "release": "npm run clean:build && npm run build && npm test && npm run lint && lerna publish"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".tsx?": "<rootDir>/jest-preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx)$",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreqizer/redux-forms.git"
  },
  "author": "oreqizer",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "^2.7.1",
    "@types/jest": "^16.0.3",
    "@types/ramda": "0.0.2",
    "@types/react-redux": "^4.4.35",
    "@types/redux": "^3.6.0",
    "babel-cli": "^6.18.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-ramda": "^1.1.6",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "chalk": "^1.1.3",
    "cross-env": "^3.1.4",
    "enzyme": "^2.7.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-plumber": "^1.1.0",
    "gulp-typescript": "^3.1.4",
    "gulp-util": "^3.0.8",
    "inferno": "^1.1.2",
    "inferno-redux": "^1.1.2",
    "jest": "^18.1.0",
    "lerna": "2.0.0-beta.32",
    "ramda": "^0.23.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "rimraf": "^2.5.4",
    "through2": "^2.0.3",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "tslint-react": "^2.3.0",
    "typescript": "^2.1.5",
    "webpack": "^2.2.0-rc.3"
  }
}
